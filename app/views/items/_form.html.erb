<%= simple_form_for [invoice, item], html: { class: "form" } do |f| %>
  <% if item.errors.any? %>
    <div class="error-message">
      <%= item.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="row align-items-end">
      <div class="col-12 col-sm-3">
        <%= f.input :product_id, label: "Product", as: :select, collection: Product.all, label_method: -> (u) { u.name } %>
      </div>
      <div class="col-12 col-sm-3">
        <%= f.input :quantity, label: "Quantity" %>
      </div>
      <div class="col-12 col-sm-3">
        <%= f.input :unit_price, label: "Price" %>
      </div>
      <div class="col-12 col-sm-3 form-actions">
        <%= link_to invoice_path(invoice) do %>
          <div class="btn btn-info">
            <i class="bi bi-x-lg"></i>
          </div>
        <% end %>
        <%= f.submit class: "btn btn-warning" %>
      </div>
    </div>
  </div>

<% end %>
