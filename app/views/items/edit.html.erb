<div class="container">
  <%= link_to sanitize("&larr; Back to invoice"), invoice_path(@invoice) %>
  <div class="card shadow mt-4">
    <div class="card-body">

      <h1>Edit item for invoice <%= @invoice.id %></h1>
      <%= turbo_frame_tag @item do %>
        <%= render "form", invoice: @invoice, item: @item %>
      <% end %>
    </div>
  </div>
</div>
