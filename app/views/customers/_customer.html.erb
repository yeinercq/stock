<div class="mt-2">
  <div class="card shadow-sm">
    <div class="card-body">
        <div class="row align-items-center">
          <div class="col-12 col-md-8">
            <%= link_to customer.name, customer_path(customer) %>
          </div>
          <div class="col-12 col-md-4 d-grid gap-2">
            <%= link_to "Delete", customer_path(customer), data:{ turbo_method: :delete }, class: "btn btn-warning" %>
            <%= link_to "Edit", edit_customer_path(customer), class: "btn btn-secondary" %>
          </div>
        </div>
    </div>
  </div>
</div>
