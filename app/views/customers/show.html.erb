<div class="container">
  <%= link_to sanitize("&larr; Back to customers"), customers_path %>
  <div class="card mt-4">
    <div class="card-header">
      <h1><%= @customer.name %></h1>
    </div>
    <div class="card-body">
      <table class="table">
        <thead>
          <tr>
            <th>Identification number</th>
            <th>e-mail</th>
            <th>Phone number</th>
            <th>Address</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @customer.id_number %></td>
            <td><%= @customer.email %></td>
            <td><%= @customer.phone_number %></td>
            <td><%= @customer.address %></td>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <div class="col-12 col-sm-6 d-grid mt-2">
          <%= link_to "Edit", edit_customer_path(@customer), class: "btn btn-secondary" %>
        </div>
        <div class="col-12 col-sm-6 d-grid mt-2">
          <%= link_to "Delete", customer_path(@customer), data: {turbo_method: :delete}, class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>
