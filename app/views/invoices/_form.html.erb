<%= simple_form_for invoice, html: { class: "form" } do |f| %>
  <% if invoice.errors.any? %>
    <div class="error-message">
      <%= invoice.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-12 col-sm-6">
        <%= f.input :customer_id, label: "Customer", as: :select, collection: Customer.all, label_method: -> (u) { u.name } %>
      </div>
    </div>
  </div>

  <div class="form-actions mt-3 d-grid gap-2">
    <%= link_to "Cancel", invoices_path, class: "btn btn-secondary" %>
    <%= f.submit class: "btn btn-info" %>
  </div>
<% end %>
