<%= simple_form_for invoice, html: { class: "form" } do |f| %>
  <% if invoice.errors.any? %>
    <div class="error-message">
      <%= invoice.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="row align-items-end">
      <div class="col-12 col-sm-8">
        <%= f.input :customer_id, label: "Customer", as: :select, collection: Customer.all, label_method: -> (u) { u.name } %>
      </div>
      <div class="form-actions col-12 col-sm-4">
        <%= link_to invoices_path do %>
          <div class="btn btn-info">
            <i class="bi bi-x-lg"></i>
          </div>
        <% end %>
        <%= f.submit class: "btn btn-warning" %>
      </div>
    </div>
  </div>

<% end %>
