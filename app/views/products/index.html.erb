<%= turbo_stream_from "products" %>

<div class="container">
  <div class="header">
    <h1>Products</h1>
    <%= link_to "New product", new_product_path, data: { turbo_frame: dom_id(Product.new) }, class: "btn btn-secondary" %>
  </div>

  <%= turbo_frame_tag Product.new %>
  <%= turbo_frame_tag "products" do %>
    <%= render @products %>
  <% end %>

</div>
