<%= simple_form_for provider do |f| %>
  <% if provider.errors.any? %>
    <div class="error-message">
      <%= provider.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-12 col-sm-4">
        <%= f.input :name, label: "Name", input_html: { autofocus: true } %>
      </div>
      <div class="col-12 col-sm-4">
        <%= f.input :email, label: "Email", class: "form-control" %>
      </div>
      <div class="col-12 col-sm-4">
        <%= f.input :phone_number %>
      </div>
    </div>
  </div>

  <div class="form-actions mt-3 d-grid gap-2">
    <%= link_to "Cancel", providers_path, class: "btn btn-secondary" %>
    <%= f.submit class: "btn btn-info" %>
  </div>
<% end %>
