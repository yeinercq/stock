<%= turbo_stream_from current_company, "providers"%>
<div class="container">
  <div class="header">
    <h1>Providers</h1>
    <%= link_to "New provider", new_provider_path, data: { turbo_frame: dom_id(Provider.new) }, class: "btn btn-primary" %>
  </div>

  <%= turbo_frame_tag Provider.new %>
  <%= turbo_frame_tag "providers" do %>
  <%= render @providers %>
  <% end %>
</div>
