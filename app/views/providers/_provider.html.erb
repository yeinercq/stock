<%= turbo_frame_tag provider  do %>
  <div class="card shadow mt-2">
    <div class="card-body">
      <div class="row align-items-center">
        <div class="col-12 col-sm-3">
          <%= provider.name %>
        </div>
        <div class="col-12 col-sm-3">
          <%= provider.email %>
        </div>
        <div class="col-12 col-sm-3">
          <%= provider.phone_number %>
        </div>
        <div class="col-12 col-sm-3 d-grid gap-2">
          <%= link_to "Delete", provider_path(provider),data: { turbo_method: :delete }, class: "btn btn-warning" %>
          <%= link_to "Edit", edit_provider_path(provider), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
